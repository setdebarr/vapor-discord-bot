{
	"extends": [
		"@tsconfig/recommended/tsconfig.json",
		"@tsconfig/node20/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],

	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"noErrorTruncation": true,

		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": "./"
	},
	"include": ["src"]
}
